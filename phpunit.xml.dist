<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	cacheResult="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="WMCPA Tests">
			<directory suffix=".php">./tests/src</directory>
		</testsuite>
	</testsuites>
</phpunit>